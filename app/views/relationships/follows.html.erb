<h2>Follow Users</h2>
<% if @user.follows_by?(@user) %>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @follows.each do |follow| %>
      <tr>
        <td>
          <%= link_to user_path(follow.followed.id) do %>
            <%= attachment_image_tag follow.followed, :profile_image, :fill, 40, 40, fallback: 'no_image.jpg', size: '40x40' %>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(follow.followed.id) do %>
            <%= follow.followed.name %>
          <% end %>
        </td>
        <td>フォロー数: <%= follow.followed.followers.count %></td>
        <td>フォロワー数: <%= follow.followed.followeds.count %></td>
        <td><%= link_to "Show", user_path(follow.followed.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>