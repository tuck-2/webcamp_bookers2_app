<h2>Follower Users</h2>
<% if @user.followers_by?(@user) %>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @followers.each do |follower| %>
      <tr>
        <td>
          <%= link_to user_path(follower.follower.id) do %>
            <%= attachment_image_tag follower.follower, :profile_image, :fill, 40, 40, fallback: 'no_image.jpg', size: '40x40' %>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(follower.follower.id) do %>
            <%= follower.follower.name %>
          <% end %>
        </td>
        <td>フォロー数: <%= follower.follower.followers.count %></td>
        <td>フォロワー数: <%= follower.follower.followeds.count %></td>
        <td><%= link_to "Show", user_path(follower.follower.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>